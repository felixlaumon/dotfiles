{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "share": "disabled",
  "permission": {
    "bash": {
      // Default all to ask
      "*": "ask",

      "git *": "deny",
      "git status": "allow",
      "git log": "allow",
      "git diff": "allow",
      "git commit": "ask",
      "git add": "ask",
      "git push": "deny",
      "git reset": "deny",

      "uv run ruff *": "allow",
      "pre-commit run *": "allow",

      "npm run dev": "deny",
      "npm run lint": "allow",
    }
  }
}
