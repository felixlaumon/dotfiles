set nocompatible
filetype off

" General
filetype plugin indent on
syntax on

set number
set numberwidth=4
set cursorline
set autoindent
set autoread
set autowrite
set encoding=utf-8
set hlsearch
set ignorecase
set incsearch
set list
set smartcase
set scrolloff=10
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
