set nocompatible
filetype off

" General
filetype plugin indent on
syntax on

set autoindent
set autoread
set autowrite
set cursorline
set encoding=utf-8
set expandtab
set hlsearch
set ignorecase
set incsearch
set number
set numberwidth=4
set scrolloff=10
set shiftwidth=4
set shortmess=I
set smartcase
set softtabstop=4
set tabstop=4
